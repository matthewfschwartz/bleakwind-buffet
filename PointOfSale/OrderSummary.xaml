<UserControl x:Class="PointOfSale.OrderSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <DockPanel Name="orderSummaryList">
        <Button Name="mainMenuButton" Click="mainMenuButton_Click" DockPanel.Dock="Top">Main Menu</Button>
        <TextBox Name="orderNumber" DockPanel.Dock="Top" TextAlignment="Center">Order #</TextBox>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center">Total: $</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center">Tax: $</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center">Subtotal: $</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center">Order Summary:</TextBlock>
        
        <ListView Name="orderList"/>
    </DockPanel>
</UserControl>
